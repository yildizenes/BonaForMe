@await Html.PartialAsync("_Delete")
<input type="hidden" id="hdnApplicationSettingId" value="" />
<div class="spinnerAnimation" style="display:none;"></div>
<link href="~/css/spinner.css" rel="stylesheet" />
<script src="~/adminLTE/plugins/summernote/summernote-bs4.js"></script>
@await Html.PartialAsync("_datatableScripts")
<script>
    document.addEventListener("DOMContentLoaded", function () {
        createTable();
        $('#AboutUs').summernote();
        $('#Vision').summernote();
        $('#Mission').summernote();
    });

    function createTable() {
        var domString = getTableDom();
        var buttons = getTableButtons("ApplicationSettings");
        $('#tblApplicationSettingList').DataTable
        ({
            "paging": true,
            "ordering": true,
            "pageLength": 25,
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "order": [[1, "desc"]],
            dom: domString,
            buttons: buttons,
            "ajax": {
                "url": "/ApplicationSetting/LoadApplicationSettingData/",
                "type": 'POST',
                "dataType": "json"
            },
            "columnDefs": [{
                "targets": [0],
                "visible": false,
                "searchable": false
            }],
            "columns": [
                getCell("Id"),
                getCell("Address"),
                getCell("InfoMail"),
                getCell("Telephone"),
                {
                    "data": "", "name": "", "autoWidth": true, "sorting": false, "style": "text-align:center",
                    "render": function (data, type, full, meta) {
                        var buttonGroup = "<div class='btn-group role='group'>";
                        buttonGroup += "<a href='#' class='btn btn-warning btn-sm' style='color:white; margin:0px 5px;' onclick=jsOpenSaveApplicationSetting('" + full.id + "');><i class='fas fa-edit'></i> Edit </a>"
                        buttonGroup += "</div>"
                        return buttonGroup;
                    }
                },
            ],
            "bDestroy": true,
        });
    }

    function jsOpenSaveApplicationSetting(id) {
        $("#hdnApplicationSettingId").val("");
        $("#AboutUs").summernote("code", "");
        $("#Vision").summernote("code", "");
        $("#Mission").summernote("code", "");
        $("#Address").val("");
        $("#GoogleMaps").val("");
        $("#InfoMail").val("");
        $("#Telephone").val("");
        $("#OpenCloseTime").val("");
        $("#Facebook").val("");
        $("#LinkedIn").val("");
        $("#Twitter").val("");
        $("#Instagram").val("");
        $("#PlayStoreAddress").val("");
        $("#AppleStoreAddress").val("");
        $("#HuaweiStoreAddress").val("");

        if (id != null && id !== "") {
            var result = ajaxRequest('POST', '@Url.Action("GetApplicationSetting", "ApplicationSetting")')
            $("#hdnApplicationSettingId").val(result.id);
            $("#AboutUs").summernote("code", result.aboutUs);
            $("#Vision").summernote("code", result.vision);
            $("#Mission").summernote("code", result.mission);
            $("#Address").val(result.address);
            $("#GoogleMaps").val(result.googleMaps);
            $("#InfoMail").val(result.infoMail);
            $("#Telephone").val(result.telephone);
            $("#OpenCloseTime").val(result.openCloseTime);
            $("#Facebook").val(result.facebook);
            $("#LinkedIn").val(result.linkedIn);
            $("#Twitter").val(result.twitter);
            $("#Instagram").val(result.instagram);
            $("#PlayStoreAddress").val(result.playStoreAddress);
            $("#AppleStoreAddress").val(result.appleStoreAddress);
            $("#HuaweiStoreAddress").val(result.huaweiStoreAddress);
        }
        $('#modalSave').modal('show');
    }

    function jsSaveApplicationSetting() {
        var data = {
            Id: $("#hdnApplicationSettingId").val(),
            AboutUs: $("#AboutUs").summernote('code'),
            Vision: $("#Vision").summernote('code'),
            Mission: $("#Mission").summernote('code'),
            Address: $("#Address").val(),
            GoogleMaps: $("#GoogleMaps").val(),
            InfoMail: $("#InfoMail").val(),
            Telephone: $("#Telephone").val(),
            OpenCloseTime: $("#OpenCloseTime").val(),
            Facebook: $("#Facebook").val(),
            LinkedIn: $("#LinkedIn").val(),
            Twitter: $("#Twitter").val(),
            Instagram: $("#Instagram").val(),
            PlayStoreAddress: $("#PlayStoreAddress").val(),
            AppleStoreAddress: $("#AppleStoreAddress").val(),
            HuaweiStoreAddress: $("#HuaweiStoreAddress").val(),
        };

        var result = ajaxRequest('POST', '@Url.Action("Save", "ApplicationSetting")', data)
        if (result != null) {
            if (result.success) {
                $('#modalSave').modal('hide');
                thisTable = $('#tblApplicationSettingList').DataTable();
                thisTable.draw();
                toastr.success('Transaction successful.');
            } else {
                toastr.error(result.message);
            }
        } else {
            $('#modalSave').modal('hide');
            toastr.error('Error in saving!');
        }
    }
</script>
