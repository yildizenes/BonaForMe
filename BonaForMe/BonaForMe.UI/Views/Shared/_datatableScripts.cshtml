    <script>

        function getCell(name) {
            let data = name.charAt(0).toLowerCase() + name.slice(1);
            return { "data": data, "name": name, "autoWidth": true };
        };

        function getTableDom() {
            return "<'row'<'col-sm-12 col-md-4'l><'col-sm-12 col-md-4'B><'col-sm-12 col-md-4'f>><'row'<'col-sm-12'tr>><'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>";
        };

        function getTableButtons(title = "Data") {
            return [
                { extend: 'copy', exportOptions: { columns: "thead th:not(.noExport)" } },
                { extend: 'csv', title: title, exportOptions: { columns: "thead th:not(.noExport)" } },
                { extend: 'excel', title: title, exportOptions: { columns: "thead th:not(.noExport)" } },
                { extend: 'pdf', title: title, exportOptions: { columns: "thead th:not(.noExport)" } },
                {
                    extend: 'print',
                    exportOptions: { columns: "thead th:not(.noExport)" },
                    title: title,
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');
                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ];
        };

        function fillOptions(selectName, list, attrName) {
            $("#" + selectName).empty();
            var defaultOp = "<option id=id_0'" + "' value='0' >---</option>";
            $("#" + selectName).append(defaultOp);
            for (var i = 0; i < list.length; i++) {
                var op = '<option ' + ' id=id_"' + list[i]["id"] + '" value="' + list[i]["id"] + '">' + list[i][attrName] + '</option>'
                $("#" + selectName).append(op);
            }
        }
    </script>