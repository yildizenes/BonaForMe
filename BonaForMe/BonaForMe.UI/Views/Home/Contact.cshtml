@model BonaForMe.DomainCore.DTO.ApplicationSettingDto
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="contact spad">
    <div class="container" style="border-top: 2px solid gray; padding-top: 30px">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Phone</h4>
                    <p>@Model.Telephone</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Address</h4>
                    <p>@Model.Address</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>Open time</h4>
                    <p>@Model.OpenCloseTime</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>@Model.InfoMail</p>
                </div>
            </div>
        </div>
    </div>
</section>
