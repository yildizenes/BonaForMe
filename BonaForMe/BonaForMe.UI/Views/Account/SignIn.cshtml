
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="author" content="Kodinger">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Bona For Me | Kullanıcı Kayıt</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">
    <link href="~/css/my-login.css" rel="stylesheet" />
    <link href="~/css/spinner.css" rel="stylesheet" />
    <link href="~/css/countryFlag.css" rel="stylesheet" />

</head>

<body class="my-login-page" style="background: url('../../images/background1.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper card-style">
                    <div class="card fat">
                        <div class="brand">
                            <img src="/images/MM-10.png" alt="logo" width="100" height="100">
                        </div>
                        <div class="card-body" style="margin-top:80%;">
                            <h5 class="card-title" align="center"> S I G N   I N &nbsp;&nbsp;</h5>
                            <form class="my-login-validation" novalidate="" method="post" action="@Url.Action("SignIn","Account")" onsubmit="frmSignIn()">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Ad" name="FirstName" value="" required autofocus>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Soyad" name="LastName" value="" required autofocus>
                                </div>

                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Eposta" name="UserMail" value="" required autofocus>
                                </div>

                                <div class="input-group">
                                    <input id="password" name="UserPassword" class="form-control" type="password" placeholder="Şifre" required>
                                    <div class="input-group-addon">
                                        <a id="btnChangePassword" href="#" onclick="changePasswordVisibility()"><i class="fas fa-eye" aria-hidden="true"></i></a>
                                    </div>
                                </div>

                                <div class="form-group m-0">
                                    <input type="submit" class="btn btn-primary" style="margin-top: 25px; display: block; width: 100%;" value="Kayıt Ol" />
                                </div>
                            </form>
                        </div>
                        <div style="color:darkred;text-align:center;">
                            @TempData["Error"]
                        </div>
                    </div>
                    <div class="footer">
                        <p>&copy; @DateTime.Now.Year | Bona For Me Her Hakkı Saklıdır.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="spinnerAnimation" style="display:none;"></div>


    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>*@
    <script src="~/adminLTE/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript">

        document.addEventListener("DOMContentLoaded", function (event) {
            function changePasswordVisibility() {
                var element = document.getElementById("password");
                if (element.type == "password") {
                    element.type = "text";
                    $('#btnChangePassword i').removeClass('fas fa-eye').addClass('fas fa-eye-slash');
                } else {
                    element.type = "password";
                    $('#btnChangePassword i').removeClass('fas fa-eye-slash').addClass('fas fa-eye');
                }
            }

            function frmSignIn() {
                $('.spinnerAnimation').css('display', 'block');
            }
    </script>
</body>
</html>
