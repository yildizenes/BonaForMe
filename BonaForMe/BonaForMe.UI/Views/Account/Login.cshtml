@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="author" content="Boname Marketing">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Boname Marketing | Login</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/my-login.css" rel="stylesheet" />
    <link href="~/css/spinner.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">
</head>

<body class="my-login-page" style="background: url('../../images/background1.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper card-style">
                    <div class="card fat">
                        <div class="brand">
                            <img src="/images/bonameformelogo.jpg" alt="logo" width="140" height="100">
                        </div>
                        <div class="card-body" style="margin-top: 80%;">
                            <h5 class="card-title" align="center"> L O G I N &nbsp;&nbsp;</h5>
                            <form class="my-login-validation" novalidate="" method="post" action="@Url.Action("Login","Account")" onsubmit="frmLogin()">
                                <div class="form-group">
                                    <input id="email" type="email" class="form-control" placeholder="Email Address" name="UserMail" value="" required autofocus>
                                </div>
                                <div class="input-group">
                                    <input id="password" name="UserPassword" class="form-control" type="password" placeholder="Password" required>
                                    <div class="input-group-addon">
                                        <a id="btnChangePassword" href="#" onclick="changePasswordVisibility(); "><i class="fas fa-eye" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                                <div class="form-group" style="text-align:right;margin-top:10px;">
                                    <div class="custom-checkbox custom-control">
                                        <a href="@Url.Action("ForgetPassword","Account")" class="text-right" style="color:black;text-decoration:underline;font-weight:bold;">
                                            Forgot Password
                                        </a>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <input type="submit" class="btn btn-primary btn-full-width" value="Login" />
                                </div>
                            </form>

                        </div>
                        <div style="color:darkgreen;text-align:center;">
                            @TempData["Success"]
                        </div>
                        <div style="color:darkred;text-align:center;">
                            @TempData["Error"]
                        </div>
                    </div>
                    <div class="footer">
                        <p>&copy; @DateTime.UtcNow.AddHours(1).Year | Boname Marketing All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="spinnerAnimation" style="display:none;"></div>
    <script src="~/adminLTE/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript">
        function changePasswordVisibility() {
            var element = document.getElementById("password");
            if (element.type == "password") {
                element.type = "text";
                $('#btnChangePassword i').removeClass('fas fa-eye').addClass('fas fa-eye-slash');
            } else {
                element.type = "password";
                $('#btnChangePassword i').removeClass('fas fa-eye-slash').addClass('fas fa-eye');
            }
        }

        function frmLogin() {
            $('.spinnerAnimation').css('display', 'block');
        }
    </script>
</body>
</html>
